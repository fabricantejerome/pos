{% extends "partials/template.twig" %}

{% block content %}
	<!-- Main content -->
	<section class="content user-list">
		<div class="row">
			<div class="col-md-12">
				{{  session.flashdata.message|raw }}
				<!-- Default box -->
				<div class="box">
					<div class="box-body">
						<table id="example2" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>Trans ID</th>
									<th>Product Line</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
									<th>Trans Date</th>
								</tr>
							</thead>

							<tbody>
								{% for entity in entities %}
									<tr>
										<td>{{ entity.trans_id }}</td>
										<td>{{ entity.product_line }}</td>
										<td>{{ entity.price }}</td>
										<td>{{ entity.quantity }}</td>
										<td>{{ entity.total }}</td>
										<td>{{ entity.created_at|date('M d, Y h:i a') }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
		</div>
	</section>
	<!-- /.content -->
{% endblock %}

{% block script %}
	{{ parent() }}
	<script>
		$(function () {
			$('#example2').DataTable({});
		});
	</script>
{% endblock %}