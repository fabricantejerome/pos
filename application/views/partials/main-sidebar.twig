			{% if session.user_type in ['Administrator'] %}
				<li class="{{ uri.uri_string == 'user' ? 'active' : '' }}">
					<a href="{{ base_url('user/') }}"><i class="fa fa-user"></i><span>Users</span></a>
				</li>
			{% endif %}

			{% if session.user_type in ['Administrator'] %}
				<li class="{{ uri.uri_string == 'category' ? 'active' : '' }}">
					<a href="{{ base_url('category/') }}"><i class="fa fa-tag"></i><span>Category</span></a>
				</li>
			{% endif %}

			{% if session.user_type in ['Administrator'] %}
				<li class="{{ uri.uri_string == 'item' ? 'active' : '' }}">
					<a href="{{ base_url('item/') }}"><i class="fa fa-hdd-o"></i><span>Items</span></a>
				</li>
			{% endif %}

			{% if session.user_type in ['Administrator'] %}
				<li class="{{ uri.uri_string == 'item/upload' ? 'active' : '' }}">
					<a href="{{ base_url('item/upload') }}"><i class="fa fa-upload"></i><span>Upload</span></a>
				</li>
			{% endif %}

			{% if session.user_type in ['Administrator', 'Cashier'] %}
				<li class="{{ uri.uri_string == 'transaction' ? 'active' : '' }}">
					<a href="{{ base_url('transaction') }}"><i class="fa fa-shopping-cart"></i><span>POS</span></a>
				</li>
			{% endif %}

			{% if session.user_type in ['Administrator'] %}
				<li class="{{ uri.uri_string == 'transaction/sales' ? 'active' : '' }}">
					<a href="{{ base_url('transaction/sales') }}"><i class="fa fa-money"></i><span>Sales</span></a>
				</li>
			{% endif %}
		</ul>
		</ul>
	</section>
